########################################
# ENV TEMPLATE                         #
# Copy .env.example to .env            #
########################################

# === Project Name (for multi-instance deployment) ===
# Used for container names and network name.
# Change this if running multiple instances on the same server.
# Example: inheritance-prod1, inheritance-staging
PROJECT_NAME=inheritance

# === App Environment ===
# development: hot reload, debug mode
# production: optimized production build
APP_ENV=production

# === Nginx ===
NGINX_PORT=7000

# === Frontend ===
# Replace with your DeepSeek API key
DEEPSEEK_API_KEY=sk-your-api-key-here
FRONTEND_PORT=7001

# === Backend (Node) ===
BACKEND_PORT=7002

# Arweave Gateway
# Use https://arweave.net (default)
ARWEAVE_GATEWAY=https://arweave.net

# Backend URL (used by frontend and MCP server)
# In Docker, use service hostname 'backend' (Docker internal network)
BACKEND_BASE_URL=http://backend:7002

# === Docker Network Binding ===
# Host address for Docker port binding (default: 0.0.0.0 = all interfaces)
# For local/development security, use: 127.0.0.1
# For production/external access, use: 0.0.0.0
DOCKER_BIND_HOST=127.0.0.1
